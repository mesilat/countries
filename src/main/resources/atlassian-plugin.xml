<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <resource type="i18n"     name="i18n"    location="/i18n/countries"/>
    <resource type="download" name="images/" location="/images"/>

    <web-resource key="resources" name="Resources">
        <transformation extension="soy">
            <transformer key="soyTransformer">
                <functions>com.atlassian.confluence.plugins.soy:soy-core-functions</functions>
            </transformer>
        </transformation>
        <!--transformation extension="js">
            <transformer key="jsI18n"/>
        </transformation-->
        
        <resource type="download" name="countries.soy.js" location="/templates/countries.soy"/>

        <context>countries</context>
    </web-resource>

    <web-resource key="editor-resources" name="Editor Resources">
        <resource type="download" name="placeholders.js"  location="/js/placeholders.js"/>
        <resource type="download" name="autocomplete.js"  location="/js/autocomplete.js"/>
        <resource type="download" name="base64.js"        location="/js/base64.js"/>
        <resource type="download" name="countries.js"     location="/js/countries.js"/>

        <context>editor</context>
    </web-resource>

    <rest key="rest" path="/countries" version="1.0" name="Rest Resources">
    </rest>

﻿   <xhtml-macro name="country" class="com.mesilat.countries.CountryMacro" key="country" state="enabled"
        icon="/download/resources/com.mesilat.countries/images/pluginLogo.png">
﻿       <category name="confluence-content"/>
        <description>Country symbol and title</description>
        <parameters>
            <parameter name="code" type="string"/>
        </parameters>
    </xhtml-macro>

﻿   <xhtml-macro name="country-symbol" class="com.mesilat.countries.CountrySymbolMacro" key="country-symbol" state="enabled"
        icon="/download/resources/com.mesilat.countries/images/pluginLogo.png">
﻿       <category name="confluence-content"/>
        <description>Country symbol</description>
        <parameters>
            <parameter name="code" type="string"/>
        </parameters>
    </xhtml-macro>
</atlassian-plugin>